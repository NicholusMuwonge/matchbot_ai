# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Clerk Authentication
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here
CLERK_DEBUG=false
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# MinIO Object Storage Configuration
MINIO_ENDPOINT=minio:9000  # Use 'localhost:9000' for local development outside Docker
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}  # References the MinIO root user
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}  # References the MinIO root password
MINIO_SECURE=false  # Set to true for production with HTTPS
MINIO_REGION=us-east-1

# MinIO Bucket Names
MINIO_BUCKET_RECONCILIATION=reconciliation-files
MINIO_BUCKET_REPORTS=reconciliation-reports
MINIO_BUCKET_TEMP=temp-uploads

# Path Prefixes (customize these for different environments)
RECONCILIATION_FILES_PREFIX=reconciliations
RECONCILIATION_RESULTS_PREFIX=reconciliations_results

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_ALLOWED_EXTENSIONS=[".csv",".xlsx",".xls"]
UPLOAD_PRESIGNED_URL_EXPIRY=3600  # 1 hour in seconds
DOWNLOAD_PRESIGNED_URL_EXPIRY=7200  # 2 hours in seconds

# File Lifecycle Configuration
UNCONFIRMED_FILE_TTL_HOURS=24
COMPLETED_FILE_ARCHIVE_DAYS=30
TEMP_FILE_TTL_HOURS=1

# MinIO Connection Pool Configuration
MINIO_CONNECTION_POOL_SIZE=10
MINIO_CONNECTION_TIMEOUT=30

# MinIO Retry Configuration
MINIO_MAX_RETRY_ATTEMPTS=3
MINIO_RETRY_INITIAL_DELAY=1.0
MINIO_RETRY_MAX_DELAY=30.0

# Application Configuration
ENVIRONMENT=local
FRONTEND_HOST=http://localhost:5173
DOMAIN=localhost
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
