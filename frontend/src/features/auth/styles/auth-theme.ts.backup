// Utility functions for theme-aware styling
export const getThemeVariant = (isDark: boolean) => (isDark ? 'dark' : 'light')

export const getAuthColors = (isDark: boolean) =>
  isDark ? authColors.dark : authColors.light

export const getBadgeVariant = (
  type: 'active' | 'inactive' | 'verified' | 'pending' | 'clerk',
  isDark: boolean
) => `${type}-${isDark ? 'dark' : 'light'}`

